{
  "name": "Testanwendung",
  "version": "1.0.0",
  "description": "Testanwendung - Arbeitszeitverwaltung",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "dev": "pnpm run dev:backend",
    "dev:backend": "pnpm --filter backend run start:dev",
    "dev:frontend": "pnpm --filter frontend run start",
    "dev:all": "pnpm run --parallel dev:backend dev:frontend",
    "start": "pnpm run start:backend",
    "start:backend": "pnpm --filter backend run start",
    "start:frontend": "pnpm --filter frontend run start",
    "start:all": "pnpm run --parallel start:backend start:frontend",
    "build": "pnpm run build:types && pnpm run build:backend && pnpm run build:frontend",
    "build:types": "pnpm --filter @seak/types run build",
    "build:backend": "pnpm --filter backend run build",
    "build:frontend": "pnpm --filter frontend run build",
    "clean": "pnpm run clean:types && pnpm run clean:backend && pnpm run clean:frontend",
    "clean:types": "pnpm --filter @seak/types run clean",
    "clean:backend": "pnpm --filter backend run clean",
    "clean:frontend": "pnpm --filter frontend run clean",
    "test": "pnpm run test:types && pnpm run test:backend && pnpm run test:frontend",
    "test:types": "pnpm --filter @seak/types run test",
    "test:backend": "pnpm --filter backend run test",
    "test:frontend": "pnpm --filter frontend run test",
    "test:watch": "pnpm run test:backend:watch",
    "test:backend:watch": "pnpm --filter backend run test:watch",
    "test:frontend:watch": "pnpm --filter frontend run test:watch",
    "lint": "pnpm run lint:types && pnpm run lint:backend && pnpm run lint:frontend",
    "lint:types": "pnpm --filter @seak/types run lint",
    "lint:backend": "pnpm --filter backend run lint",
    "lint:frontend": "pnpm --filter frontend run lint",
    "lint:fix": "pnpm run lint:types:fix && pnpm run lint:backend:fix && pnpm run lint:frontend:fix",
    "lint:types:fix": "pnpm --filter @seak/types run lint:fix",
    "lint:backend:fix": "pnpm --filter backend run lint:fix",
    "lint:frontend:fix": "pnpm --filter frontend run lint:fix",
    "format": "pnpm run format:types && pnpm run format:backend && pnpm run format:frontend",
    "format:types": "pnpm --filter @seak/types run format",
    "format:backend": "pnpm --filter backend run format",
    "format:frontend": "pnpm --filter frontend run format",
    "format:check": "pnpm run format:types:check && pnpm run format:backend:check && pnpm run format:frontend:check",
    "format:types:check": "pnpm --filter @seak/types run format:check",
    "format:backend:check": "pnpm --filter backend run format:check",
    "format:frontend:check": "pnpm --filter frontend run format:check",
    "install:all": "pnpm install",
    "install:types": "pnpm --filter @seak/types install",
    "install:backend": "pnpm --filter backend install",
    "install:frontend": "pnpm --filter frontend install",
    "ng": "pnpm --filter frontend run ng",
    "reset": "pnpm run clean && pnpm run install:all && pnpm run build"
  },
  "devDependencies": {
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,css,scss,html,md,json}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.10.0"
}
